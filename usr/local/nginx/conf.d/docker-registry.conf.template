server {
    listen                443 ssl;
    server_name           docker-registry.arimit.su;
    auth_basic            "Restricted";
    auth_basic_user_file  /usr/local/nginx/docker-registry.htpasswd;
    client_max_body_size  1G;
    location / {
        proxy_pass ${DOCKER_REGISTRY_HOST_NAME};
    }
}
